{
  "$schema": "https://selia.nauv.al/schemas/registry.v1.json",
  "name": "selia",
  "homepage": "https://selia.nauv.al",
  "setup": {
    "steps": [
      {
        "type": "assert",
        "name": "tailwind-installed",
        "check": {
          "type": "dependency",
          "packages": ["tailwindcss"]
        },
        "onFail": {
          "exit": true,
          "message": [
            "Tailwind CSS is not installed.",
            "Refer to https://tailwindcss.com/docs/installation for more information."
          ]
        }
      },
      {
        "type": "dependencies",
        "packages": {
          "@base-ui/react": "^1.0.0",
          "tailwind-merge": "^3.3.1",
          "clsx": "^2.1.1",
          "class-variance-authority": "^0.7.1"
        }
      },
      {
        "name": "framework",
        "type": "detect-framework"
      },
      {
        "name": "workdir",
        "type": "detect-workdir",
        "saveAs": "paths.workdir"
      },

      {
        "type": "file-append",
        "target": "{{paths.workdir}}index.css",
        "contentPath": "app/selia.css",
        "saveTargetAs": "paths.css",
        "condition": {
          "if": {
            "type": "framework",
            "value": "vite"
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{paths.workdir}}index.css",
                "pattern": "@utility\\s+bg-spinner|\\.root\\s*\\{|--color-danger"
              }
            ]
          }
        }
      },
      {
        "type": "file-append",
        "target": "{{paths.workdir}}app/globals.css",
        "contentPath": "app/selia.css",
        "saveTargetAs": "paths.css",
        "condition": {
          "if": {
            "type": "framework",
            "value": "next"
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{paths.workdir}}app/globals.css",
                "pattern": "@utility\\s+bg-spinner|\\.root\\s*\\{|--color-danger"
              }
            ]
          }
        }
      },
      {
        "type": "file-append",
        "target": "{{paths.workdir}}app/app.css",
        "contentPath": "app/selia.css",
        "saveTargetAs": "paths.css",
        "condition": {
          "if": {
            "type": "framework",
            "value": "react-router"
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{paths.workdir}}app/app.css",
                "pattern": "@utility\\s+bg-spinner|\\.root\\s*\\{|--color-danger"
              }
            ]
          }
        }
      },
      {
        "type": "file-append",
        "target": "{{paths.workdir}}styles.css",
        "contentPath": "app/selia.css",
        "saveTargetAs": "paths.css",
        "condition": {
          "if": {
            "any": [
              {
                "type": "framework",
                "value": "tanstack-start"
              },
              {
                "type": "framework",
                "value": "tanstack-router"
              }
            ]
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{paths.workdir}}styles.css",
                "pattern": "@utility\\s+bg-spinner|\\.root\\s*\\{|--color-danger"
              }
            ]
          }
        }
      },

      {
        "type": "file-update",
        "target": "index.html",
        "search": "(<div\\b[^>]*\\bid=['\"][^'\"]+['\"])(?![^>]*\\bclass=)",
        "replace": "$1 class=\"root\"",
        "condition": {
          "if": {
            "any": [
              {
                "type": "framework",
                "value": "vite"
              },
              {
                "type": "framework",
                "value": "tanstack-router"
              }
            ]
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "index.html",
                "pattern": "class=['\"][^'\"]*\\broot\\b"
              }
            ]
          }
        }
      },
      {
        "type": "file-update",
        "target": "app/layout.tsx",
        "search": "(<body[^>]*>)(\\s*)(\\{children\\}|\\{props\\.children\\})(\\s*)(</body>)",
        "replace": "$1$2<div className=\"root\">\n        $3\n      </div>$4$5",
        "condition": {
          "if": {
            "type": "framework",
            "value": "next"
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "app/layout.tsx",
                "pattern": "<div[^>]*className=['\"]root['\"]"
              }
            ]
          }
        }
      },
      {
        "type": "file-update",
        "target": "{{paths.workdir}}app/root.tsx",
        "search": "(<body[^>]*>)(\\s*)(\\{children\\}|\\{props\\.children\\}|<Outlet\\s*\\/>)([\\s\\S]*?)(</body>)",
        "replace": "$1$2<div className=\"root\">\n        $3\n      </div>$4$5",
        "condition": {
          "if": {
            "type": "framework",
            "value": "react-router"
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{paths.workdir}}app/root.tsx",
                "pattern": "<div[^>]*className=['\"]root['\"]"
              }
            ]
          }
        }
      },
      {
        "type": "file-update",
        "target": "{{paths.workdir}}routes/__root.tsx",
        "search": "(\\{children\\}|\\{props\\.children\\}|<Outlet\\s*\\/>)",
        "replace": "<div className=\"root\">\n  $1\n</div>",
        "condition": {
          "if": {
            "type": "framework",
            "value": "tanstack-start"
          },
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{paths.workdir}}routes/__root.tsx",
                "pattern": "<div[^>]*className=['\"]root['\"]"
              }
            ]
          }
        }
      },

      {
        "type": "file-create",
        "target": "{{paths.workdir}}lib/utils.ts",
        "contentPath": "lib/utils.ts",
        "saveTargetAs": ["paths.utils"],
        "condition": {
          "if": {
            "any": [
              {
                "type": "framework",
                "value": "next"
              },
              {
                "type": "framework",
                "value": "vite"
              },
              {
                "type": "framework",
                "value": "tanstack-start"
              },
              {
                "type": "framework",
                "value": "tanstack-router"
              }
            ]
          },
          "unless": {
            "any": [
              {
                "type": "file-exists",
                "path": "{{paths.workdir}}lib/utils.ts"
              }
            ]
          }
        }
      },
      {
        "type": "file-create",
        "target": "{{paths.workdir}}app/lib/utils.ts",
        "contentPath": "lib/utils.ts",
        "saveTargetAs": ["paths.utils"],
        "condition": {
          "if": {
            "any": [
              {
                "type": "framework",
                "value": "react-router"
              }
            ]
          },
          "unless": {
            "any": [
              {
                "type": "file-exists",
                "path": "{{paths.workdir}}app/lib/utils.ts"
              }
            ]
          }
        }
      },

      {
        "type": "context-update",
        "name": "next-vite-path",
        "data": {
          "paths.components": "{{paths.workdir}}components/selia",
          "imports.utils": "@/lib/utils.ts",
          "imports.components": "@/components/selia"
        },
        "condition": {
          "if": {
            "any": [
              {
                "type": "framework",
                "value": "next"
              },
              {
                "type": "framework",
                "value": "vite"
              },
              {
                "type": "framework",
                "value": "tanstack-start"
              },
              {
                "type": "framework",
                "value": "tanstack-router"
              }
            ]
          }
        }
      },
      {
        "type": "context-update",
        "name": "react-router-path",
        "data": {
          "paths.components": "{{paths.workdir}}app/components/selia",
          "imports.utils": "~/lib/utils.ts",
          "imports.components": "~/components/selia"
        },
        "condition": {
          "if": {
            "type": "framework",
            "value": "react-router"
          }
        }
      }
    ]
  },
