{
  "$schema": "https://selia.nauv.al/schemas/registry.v1.json",
  "name": "selia",
  "homepage": "https://selia.nauv.al",
  "setup": {
    "steps": [
      {
        "type": "assert",
        "name": "tailwind-installed",
        "check": {
          "type": "dependency",
          "packages": ["tailwindcss"]
        },
        "onFail": {
          "exit": true,
          "message": [
            "Tailwind CSS is not installed.",
            "Refer to https://tailwindcss.com/docs/installation for more information."
          ]
        }
      },
      {
        "type": "dependencies",
        "packages": {
          "@base-ui/react": "^1.0.0",
          "tailwind-merge": "^3.3.1",
          "clsx": "^2.1.1",
          "class-variance-authority": "^0.7.1"
        }
      },
      {
        "name": "framework",
        "type": "detect-framework"
      },
      {
        "name": "css",
        "type": "prompt",
        "message": "Where is your main CSS file?",
        "promptType": "file-search",
        "pattern": "**/*.css",
        "exclude": ["**/node_modules/**", "**/public/**", "**/dist/**"],
        "saveAs": "paths.css",
        "default": "app/app.css"
      },
      {
        "name": "utils",
        "type": "prompt",
        "promptType": "text",
        "message": "Where do you want to place your utils file?",
        "default": "lib/utils.ts",
        "saveAs": "paths.utils",
        "validate": {
          "pattern": ".*\\.ts$",
          "required": true
        }
      },
      {
        "type": "prompt",
        "name": "root-file",
        "promptType": "file-search",
        "message": "Where is your root layout file?",
        "pattern": "**/{layout,root,__root,main,index,layout,app}.{tsx,ts,js,jsx,blade.php}",
        "exclude": ["**/node_modules/**", "**/dist/**", "**/.next/**"],
        "saveAs": "paths.rootFile"
      },
      {
        "type": "file-append",
        "target": "{{css}}",
        "contentPath": "app/selia.css",
        "condition": {
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{css}}",
                "pattern": "@utility\\s+bg-spinner|\\.root\\s*\\{|--color-danger"
              }
            ]
          }
        }
      },
      {
        "type": "file-create",
        "target": "{{utils}}",
        "contentPath": "lib/utils.ts"
      },
      {
        "type": "file-update-json",
        "target": "tsconfig.json",
        "merge": "deep",
        "content": {
          "compilerOptions": {
            "baseUrl": "."
          }
        }
      },
      {
        "type": "file-update",
        "target": "{{paths.rootFile}}",
        "search": "(<body(?:\\s+[^>]*)?>)\\s*(?:\\n\\s*)?(\\{children\\}|\\{props\\.children\\}|\\{outlet\\}|<Outlet\\s*\\/>|<RouterProvider[^>]*>)\\s*(?:\\n\\s*)?(</body>)",
        "replace": "$1\n      <div className=\"root\">\n        $2\n      </div>\n    $3",
        "condition": {
          "unless": {
            "any": [
              {
                "type": "file-contains",
                "path": "{{paths.rootFile}}",
                "pattern": "<div\\s+className=['\"]root['\"]"
              }
            ]
          }
        }
      }
    ]
  },
